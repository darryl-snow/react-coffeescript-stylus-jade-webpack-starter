hidpi($ratio = 1.3)

	$mq =						"(-webkit-min-device-pixel-ratio: " + $ratio + "), "
	$mq =						$mq + "(min-resolution: " + floor($ratio * 96) + "dpi)"

	@media $mq
		{block}

fixed()
	position					fixed

fl()
	float						left

fr()
	float						right

horizontal-centre()
	position					relative
	left						50%
	transform					translateX(-50%)

relative()
	position					relative

vertical-centre()
	position					relative
	top							50%
	transform					translateY(-50%)