// @name Input
// @description Standard text input
// @state :disabled, --disabled - Dims the input when disabled
// @state .input--block - Makes the input full-width
// @markup
// <input class="o-input" id="input" placeholder="placeholder text" type="text"></input>
// <input class="o-input" disabled id="input" placeholder="placeholder text" type="text"></input>
// <input class="o-input o-input--block" id="input" placeholder="placeholder text" type="text"></input>
.o-input
	background		$white
	border			1px solid $light-grey-1
	box-shadow		none
	display			block
	font-size		1rem
	margin-bottom	$base-spacing-unit
	padding			0.5 * $base-spacing-unit

	&:disabled,
	&[disabled],
	&--disabled
		background	$light-grey-1
		cursor		not-allowed !important

		& ~ label,
		& ~ .o-label
			cursor	not-allowed !important

	&--block
		width		100%

// @name Label
// @description Standard label for form inputs
// @markup
// <label class="o-label" for="input">Form field:</label>
.o-label
	cursor			pointer